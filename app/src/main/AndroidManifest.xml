<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.mamunsproject.animationstudio">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/animation_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/animation_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.AnimationStudio"
        tools:replace="android:icon"
        android:name=".OneSignalNotification"

        >
        <activity android:name=".Activity.TomJerryCartoonActivity"/>
        <activity android:name=".Activity.OggyCartoonActivity" />
        <activity android:name=".Activity.ChottaBheemCartoonActivity" />
        <activity android:name=".Activity.Ben10CartoonActivity" />
        <activity android:name=".Activity.HindiCartoonActivity" />
        <activity android:name=".Activity.ArabicCartoonActivity" />
        <activity android:name=".CategoryPlayer" />
        <activity
            android:name="com.facebook.ads.AudienceNetworkActivity"
            android:hardwareAccelerated="true" />

        <activity android:name=".LearningVideoActivity" />
        <activity android:name=".Splash_Screen"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".PlayListPlayer" />
        <activity android:name=".Quiz_Activity" />
        <activity
            android:name=".PlayerActivity"
            android:configChanges="orientation|keyboardHidden|screenSize|layoutDirection" />
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"/>
    </application>

</manifest>